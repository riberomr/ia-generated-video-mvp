    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}